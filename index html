<script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js';
    import { getAuth, signInAnonymously, onAuthStateChanged, signInWithCustomToken } from 'https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js';
    import { getFirestore, doc, setDoc, getDoc, collection, getDocs } from 'https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js';

    const firebaseConfig = JSON.parse('{"apiKey":"AIzaSyBxMzw8I7nc7e29X1xQoH2kgGHIiHzLUGo","authDomain":"presupuesto-familiar-15478.firebaseapp.com","databaseURL":"https://presupuesto-familiar-15478-default-rtdb.firebaseio.com","projectId":"presupuesto-familiar-15478","storageBucket":"presupuesto-familiar-15478.firebasestorage.app","messagingSenderId":"436445257047","appId":"1:436445257047:web:e692e018781bbdeb7c3212","measurementId":"G-CBPM2XMB67"}');
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);
    const appId = 'zombie-red-zone-ultra-pro';

    let currentUser = null;
    let savedData = null;

    const initAuth = async () => {
        try {
            if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) await signInWithCustomToken(auth, __initial_auth_token);
            else await signInAnonymously(auth);
        } catch (err) {
            document.getElementById('cloud-status').innerText = "SATLITE OFFLINE";
            document.getElementById('setup-ui').classList.remove('hidden');
        }
    };

    onAuthStateChanged(auth, async (user) => {
        if (user) {
            currentUser = user;
            document.getElementById('cloud-status').innerText = "SISTEMAS ONLINE";
            await loadSavedData();
            document.getElementById('setup-ui').classList.remove('hidden');
        }
    });

    async function loadSavedData() {
        if (!currentUser) return;
        try {
            const saveRef = doc(db, 'artifacts', appId, 'users', currentUser.uid, 'saveData', 'current');
            const snap = await getDoc(saveRef);
            if (snap.exists()) {
                savedData = snap.data();
                document.getElementById('resume-btn').classList.remove('hidden');
                document.getElementById('saved-level').innerText = savedData.level;
                document.getElementById('player-name-input').value = savedData.name;
                window.selectAvatar(savedData.avatarIdx);
            }
        } catch (e) {}
    }

    window.saveGameProgress = async (lvl, scr, name, avIdx) => {
        if (!currentUser) return;
        try {
            const saveRef = doc(db, 'artifacts', appId, 'users', currentUser.uid, 'saveData', 'current');
            await setDoc(saveRef, { level: lvl, score: scr, name, avatarIdx: avIdx, timestamp: Date.now() });
        } catch (e) {}
    };

    window.submitHighScore = async (name, score, level, avatarIdx) => {
        if (!currentUser) return;
        try {
            const scoreRef = doc(db, 'artifacts', appId, 'public', 'data', 'leaderboard', currentUser.uid);
            await setDoc(scoreRef, { name, score, level, avatarIdx, timestamp: Date.now() });
        } catch (e) {}
    };

    window.getLeaderboard = async () => {
        try {
            const lbRef = collection(db, 'artifacts', appId, 'public', 'data', 'leaderboard');
            const snap = await getDocs(lbRef);
            const scores = [];
            snap.forEach(doc => scores.push(doc.data()));
            return scores.sort((a, b) => b.score - a.score).slice(0, 5);
        } catch (e) { return []; }
    };

    initAuth();
</script>

<script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    
    // --- CONFIGURACIN ZOMBIES (DAO AUMENTADO) ---
    const ZOMBIE_TYPES = Array.from({ length: 10 }, (_, i) => {
        const index = i + 1;
        return {
            id: index,
            radius: (40 + (i * 10)),
            hp: 200 * Math.pow(1.6, i),
            speed: 3.2 - (i * 0.2), 
            damage: 25 + (i * 12), // DAO MASIVO
            scoreValue: 500 * index,
            color: `hsl(${140 - (i * 14)}, 100%, 50%)`
        };
    });

    const ASSETS = {
        hospital: 'https://cdn-icons-png.flaticon.com/512/2966/2966327.png',
        refuge: 'https://cdn-icons-png.flaticon.com/512/2590/2590525.png',
        hero: [
            'https://cdn-icons-png.flaticon.com/512/3408/3408545.png',
            'https://cdn-icons-png.flaticon.com/512/4140/4140037.png',
            'https://cdn-icons-png.flaticon.com/512/1154/1154443.png',
            'https://cdn-icons-png.flaticon.com/512/606/606553.png'
        ],
        bot: 'https://cdn-icons-png.flaticon.com/512/1067/1067357.png'
    };

    const WEAPONS = {
        PISTOL: { icon: '', speed: 22, damage: 120, delay: 180, ammo: 80, maxAmmo: 120, color: '#fbbf24' },
        PLASMA: { icon: '', speed: 30, damage: 90, delay: 70, ammo: 200, maxAmmo: 300, color: '#22d3ee' },
        GRENADE: { icon: '', speed: 12, damage: 3500, delay: 1500, ammo: 10, maxAmmo: 15, color: '#ef4444', isGrenade: true }
    };

    let images = {};
    let player, entities = [], bullets = [], buildings = [], splatters = [], items = [], grenades = [];
    let camera = { x: 0, y: 0, zoom: 0.9 };
    let keys = {}, touchMove = { x: 0, y: 0 }, touchStart = null;
    let isGameOver = false, isPaused = false, score = 0, kills = 0, targetKills = 100, currentLvl = 1;
    let activeWKey = 'PISTOL', selectedAvatarIdx = 0, isFiring = false, lastFire = 0;

    class Entity {
        constructor(x, y, config) {
            this.x = x; this.y = y;
            this.isPlayer = config.isPlayer || false;
            this.isBot = config.isBot || false;
            this.team = config.team || 'zombie';
            this.radius = config.radius || 25;
            this.maxHp = config.hp || 100;
            this.hp = this.maxHp;
            this.speed = config.speed || 4;
            this.damage = config.damage || 1;
            this.angle = 0;
            this.color = config.color || '#fff';
            this.invul = 0;
            this.active = true;
            this.lives = config.lives || 3;
            this.inRefuge = false;
        }

        update() {
            if (this.invul > 0) this.invul--;
            if (this.isPlayer) { this.checkBuildings(); this.autoAim(); }
            if (this.isBot) this.aiBot();
            if (this.team === 'zombie') this.aiZombie();
        }

        checkBuildings() {
            let statusHTML = '';
            let foundRefuge = false;

            buildings.forEach(b => {
                let dist = Math.hypot(this.x - b.x, this.y - b.y);
                if (dist < b.radius + 20) {
                    if (b.type === 'hospital' && this.hp < this.maxHp) {
                        this.hp += 0.8;
                        statusHTML += '<div class="status-badge healing">Regenerando Tejidos...</div>';
                    }
                    if (b.type === 'refuge') {
                        if (b.cooldown > 0) {
                            statusHTML += `<div class="status-badge cooldown-alert">REFUGIO DESTRUIDO (${Math.ceil(b.cooldown/60)}s)</div>`;
                        } else {
                            foundRefuge = true;
                            b.timer++;
                            statusHTML += `<div class="status-badge recharging">En Bunker (${Math.ceil((600 - b.timer)/60)}s) - Recargando...</div>`;
                            
                            // Recarga Lenta
                            if (b.timer % 30 === 0) {
                                Object.keys(WEAPONS).forEach(w => {
                                    if (WEAPONS[w].ammo < WEAPONS[w].maxAmmo) WEAPONS[w].ammo++;
                                });
                                updateHUD();
                            }

                            if (b.timer >= 600) { // 10 Segundos
                                b.cooldown = 3600; // 60 Segundos de bloqueo
                                b.timer = 0;
                            }
                        }
                    }
                } else if (b.type === 'refuge' && b.timer > 0) {
                    // Si sale voluntariamente, tambi茅n entra en cooldown
                    b.cooldown = 3600;
                    b.timer = 0;
                }
            });
            
            this.inRefuge = foundRefuge;
            document.getElementById('status-container').innerHTML = statusHTML;
        }

        autoAim() {
            let target = null, minDist = 800;
            entities.forEach(e => {
                if (e.active && e.team === 'zombie') {
                    let d = Math.hypot(e.x - this.x, e.y - this.y);
                    if (d < minDist) { minDist = d; target = e; }
                }
            });
            if (target) this.angle = Math.atan2(target.y - this.y, target.x - this.x);
        }

        aiBot() {
            let target = null, minDist = 800;
            entities.forEach(e => {
                if (e.active && e.team === 'zombie') {
                    let d = Math.hypot(e.x - this.x, e.y - this.y);
                    if (d < minDist) { minDist = d; target = e; }
                }
            });
            if (target) {
                this.angle = Math.atan2(target.y - this.y, target.x - this.x);
                let d = Math.hypot(target.x - this.x, target.y - this.y);
                if (d > 300) { this.x += Math.cos(this.angle) * this.speed; this.y += Math.sin(this.angle) * this.speed; }
                if (Math.random() < 0.05) spawnBullet(this, this.angle, this.color);
            }
        }

        aiZombie() {
            if (player.inRefuge) { // Zombies deambulan si el jugador est谩 en el bunker
                this.x += Math.cos(this.angle) * this.speed * 0.3;
                if (Math.random() < 0.02) this.angle = Math.random() * Math.PI * 2;
                return;
            }

            let d = Math.hypot(player.x - this.x, player.y - this.y);
            this.angle = Math.atan2(player.y - this.y, player.x - this.x);
            this.x += Math.cos(this.angle) * this.speed;
            this.y += Math.sin(this.angle) * this.speed;

            if (d < this.radius + player.radius) player.takeDamage(this.damage);
        }

        takeDamage(amt) {
            if (this.invul > 0 || this.inRefuge) return; 
            this.hp -= amt;
            if (this.isPlayer) {
                document.getElementById('blood-vignette').classList.add('damage-taken');
                setTimeout(() => document.getElementById('blood-vignette').classList.remove('damage-taken'), 300);
                this.invul = 60; // 1 segundo de protecci贸n
            }
            if (this.hp <= 0) {
                if (this.isPlayer && this.lives > 1) {
                    this.lives--; this.hp = this.maxHp; this.invul = 180;
                    updateHUD();
                } else {
                    this.active = false;
                    if (this.isPlayer) endGame(); else onDeath(this);
                }
            }
            if (this.isPlayer) updateHUD();
        }

        draw() {
            const sx = (this.x - camera.x) * camera.zoom;
            const sy = (this.y - camera.y) * camera.zoom;
            const size = (this.radius * 2) * camera.zoom;

            if (sx < -size || sx > canvas.width + size || sy < -size || sy > canvas.height + size) return;

            // Aura de Protecci贸n (Sin parpadeo)
            if (this.invul > 0 || this.inRefuge) {
                ctx.beginPath();
                ctx.arc(sx, sy, size/1.5, 0, Math.PI*2);
                ctx.strokeStyle = this.inRefuge ? '#3b82f6' : '#ef4444';
                ctx.lineWidth = 4;
                ctx.stroke();
                ctx.globalAlpha = 0.7;
            }

            ctx.save();
            ctx.translate(sx, sy);
            ctx.rotate(this.angle + Math.PI/2);
            let img = this.isPlayer ? images.hero[selectedAvatarIdx] : (this.isBot ? images.bot : null);
            if (img) ctx.drawImage(img, -size/2, -size/2, size, size);
            else {
                ctx.fillStyle = this.color;
                ctx.beginPath(); ctx.arc(0,0,size/2,0,Math.PI*2); ctx.fill();
            }
            ctx.restore();
            ctx.globalAlpha = 1.0;
        }
    }

    function spawnBullet(owner, angle, color) {
        let w = WEAPONS[activeWKey];
        if (owner.isBot) w = WEAPONS.PISTOL;

        if (w.isGrenade) {
            grenades.push({
                x: owner.x, y: owner.y, 
                vx: Math.cos(angle) * w.speed, vy: Math.sin(angle) * w.speed,
                timer: 180, radius: 0, maxRadius: 450, exploded: false
            });
        } else {
            bullets.push({
                x: owner.x, y: owner.y, vx: Math.cos(angle) * w.speed, vy: Math.sin(angle) * w.speed,
                damage: w.damage + (currentLvl * 10), color: color || w.color, owner: owner, life: 100
            });
        }
    }

    function onDeath(e) {
        for(let i=0; i<6; i++) splatters.push({ x: e.x+(Math.random()-0.5)*40, y: e.y+(Math.random()-0.5)*40, r: 10+Math.random()*30, color: e.color, alpha: 0.7 });
        kills++; score += ZOMBIE_TYPES.find(t => t.radius === e.radius)?.scoreValue || 500;
        if (kills >= targetKills) {
            currentLvl++; targetKills += 100; kills = 0;
            const anim = document.getElementById('level-up-text');
            anim.style.opacity = '1'; setTimeout(() => anim.style.opacity = '0', 3000);
            player.hp = player.maxHp;
            const name = document.getElementById('player-name-input').value;
            if (window.saveGameProgress) window.saveGameProgress(currentLvl, score, name, selectedAvatarIdx);
        }
        updateHUD();
    }

    function startGame(resume) {
        const name = document.getElementById('player-name-input').value.trim() || "AGENTE";
        document.getElementById('startup-screen').style.display = 'none';
        
        player = new Entity(0, 0, { isPlayer: true, hp: 400, speed: 7.5, team: 'human' });
        entities = []; bullets = []; buildings = []; splatters = []; items = []; grenades = [];
        isGameOver = false; isPaused = false;
        
        if (resume && savedData) {
            currentLvl = savedData.level; score = savedData.score;
            targetKills = 100 + (currentLvl - 1) * 100;
        } else { currentLvl = 1; targetKills = 100; score = 0; }
        
        for(let i=0; i<3; i++) spawnBuilding('hospital');
        for(let i=0; i<3; i++) spawnBuilding('refuge');
        for(let i=0; i<2; i++) {
            let a = Math.random()*Math.PI*2, d = 1000;
            entities.push(new Entity(Math.cos(a)*d, Math.sin(a)*d, { isBot: true, team: 'human', hp: 800, speed: 5, color: '#a855f7' }));
        }

        updateHUD();
        requestAnimationFrame(gameLoop);
    }

    function spawnBuilding(type) {
        let a = Math.random()*Math.PI*2, d = 1500 + Math.random()*2000;
        buildings.push({ x: Math.cos(a)*d, y: Math.sin(a)*d, type: type, radius: 130, img: images[type], timer: 0, cooldown: 0 });
    }

    function updateLogic() {
        let vx = 0, vy = 0;
        if (keys['w']) vy = -1; if (keys['s']) vy = 1; if (keys['a']) vx = -1; if (keys['d']) vx = 1;
        if (touchMove.x || touchMove.y) { vx = touchMove.x; vy = touchMove.y; }

        if (vx || vy) {
            let m = Math.hypot(vx, vy);
            player.x += (vx/m) * player.speed; player.y += (vy/m) * player.speed;
        }

        camera.x = player.x - (canvas.width/2)/camera.zoom;
        camera.y = player.y - (canvas.height/2)/camera.zoom;

        if (isFiring && Date.now() - lastFire > WEAPONS[activeWKey].delay) {
            if (WEAPONS[activeWKey].ammo > 0) {
                spawnBullet(player, player.angle);
                WEAPONS[activeWKey].ammo--;
                lastFire = Date.now();
                updateHUD();
            }
        }

        buildings.forEach(b => { if (b.cooldown > 0) b.cooldown--; });

        bullets.forEach((b, i) => {
            b.x += b.vx; b.y += b.vy; b.life--;
            entities.forEach(e => {
                if (e.active && e !== b.owner && Math.hypot(b.x-e.x, b.y-e.y) < e.radius) {
                    e.takeDamage(b.damage); b.life = 0;
                }
            });
            if (b.life <= 0) bullets.splice(i, 1);
        });

        grenades.forEach((g, i) => {
            if (!g.exploded) {
                g.x += g.vx; g.y += g.vy; g.vx *= 0.96; g.vy *= 0.96;
                g.timer--;
                if (g.timer <= 0) g.exploded = true;
            } else {
                g.radius += 15;
                entities.forEach(e => {
                    if (e.active && Math.hypot(g.x-e.x, g.y-e.y) < g.radius) e.takeDamage(50);
                });
                if (g.radius >= g.maxRadius) grenades.splice(i, 1);
            }
        });

        if (entities.filter(e => e.team === 'zombie').length < (40 + currentLvl * 15) && Math.random() < 0.08) {
            let a = Math.random()*Math.PI*2, d = 1600;
            const type = ZOMBIE_TYPES[Math.floor(Math.random() * Math.min(10, currentLvl + 1))];
            entities.push(new Entity(player.x + Math.cos(a)*d, player.y + Math.sin(a)*d, type));
        }

        entities.forEach(e => e.update());
        player.update();
        entities = entities.filter(e => e.active || e.isBot);
    }

    function draw() {
        ctx.fillStyle = '#050505'; ctx.fillRect(0,0,canvas.width, canvas.height);
        
        ctx.strokeStyle = 'rgba(255,0,0,0.05)';
        let s = 100 * camera.zoom;
        for(let x=(-camera.x*camera.zoom)%s; x<canvas.width; x+=s){ ctx.beginPath(); ctx.moveTo(x,0); ctx.lineTo(x,canvas.height); ctx.stroke(); }
        for(let y=(-camera.y*camera.zoom)%s; y<canvas.height; y+=s){ ctx.beginPath(); ctx.moveTo(0,y); ctx.lineTo(canvas.width,y); ctx.stroke(); }

        splatters.forEach(sp => {
            ctx.fillStyle = sp.color; ctx.globalAlpha = sp.alpha;
            ctx.beginPath(); ctx.arc((sp.x-camera.x)*camera.zoom, (sp.y-camera.y)*camera.zoom, sp.r*camera.zoom, 0, Math.PI*2); ctx.fill();
        });
        ctx.globalAlpha = 1;

        buildings.forEach(b => {
            let sx = (b.x-camera.x)*camera.zoom, sy = (b.y-camera.y)*camera.zoom, sz = b.radius*2.2*camera.zoom;
            if (b.cooldown > 0) ctx.filter = 'grayscale(1) brightness(0.5)';
            ctx.drawImage(b.img, sx-sz/2, sy-sz/2, sz, sz);
            ctx.filter = 'none';

            if (b.type === 'refuge' && b.timer > 0) {
                ctx.fillStyle = 'white'; ctx.font = 'bold 12px Arial'; ctx.textAlign = 'center';
                ctx.fillText(`EVACUACIN EN: ${Math.ceil((600-b.timer)/60)}s`, sx, sy - sz/1.8);
            }
        });

        grenades.forEach(g => {
            let sx = (g.x-camera.x)*camera.zoom, sy = (g.y-camera.y)*camera.zoom;
            if (!g.exploded) {
                ctx.fillStyle = 'black'; ctx.beginPath(); ctx.arc(sx, sy, 10*camera.zoom, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = 'red'; ctx.font = 'bold 10px Arial'; ctx.fillText(Math.ceil(g.timer/60), sx, sy-15);
            } else {
                ctx.beginPath(); ctx.arc(sx, sy, g.radius*camera.zoom, 0, Math.PI*2);
                ctx.fillStyle = `rgba(255, 100, 0, ${1 - g.radius/g.maxRadius})`; ctx.fill();
            }
        });

        bullets.forEach(b => {
            ctx.fillStyle = b.color;
            ctx.beginPath(); ctx.arc((b.x-camera.x)*camera.zoom, (b.y-camera.y)*camera.zoom, 5*camera.zoom, 0, Math.PI*2); ctx.fill();
        });

        entities.forEach(e => e.draw());
        player.draw();
    }

    function gameLoop() {
        if (!isGameOver) {
            if (!isPaused) updateLogic();
            draw();
            requestAnimationFrame(gameLoop);
        }
    }

    function updateHUD() {
        document.getElementById('lives-display').innerText = "わ".repeat(player.lives);
        document.getElementById('hp-bar').style.width = `${(player.hp/player.maxHp)*100}%`;
        document.getElementById('score-val').innerText = score.toString().padStart(6, '0');
        document.getElementById('level-display').innerText = currentLvl.toString().padStart(2, '0');
        document.getElementById('z-remain').innerText = `${kills}/${targetKills}`;
        document.getElementById('objective-progress').style.width = `${(kills/targetKills)*100}%`;
        document.getElementById('weapon-icon-btn').innerText = WEAPONS[activeWKey].icon;
        document.getElementById('ammo-count').innerText = WEAPONS[activeWKey].ammo;
    }

    window.selectAvatar = (idx) => {
        selectedAvatarIdx = idx;
        document.querySelectorAll('.avatar-card').forEach((c, i) => c.classList.toggle('selected', i === idx));
    };

    window.togglePause = () => { isPaused = !isPaused; document.getElementById('pause-btn').innerText = isPaused ? '讹' : '革'; };
    window.quickSwapWeapon = () => { 
        let keys = Object.keys(WEAPONS);
        let idx = keys.indexOf(activeWKey);
        activeWKey = keys[(idx + 1) % keys.length];
        updateHUD();
    };

    async function endGame() {
        isGameOver = true;
        const name = document.getElementById('player-name-input').value || "AGENTE";
        document.getElementById('game-over').style.display = 'flex';
        document.getElementById('final-stats').innerHTML = `MISIN FALLIDA<br>AGENTE: ${name}<br>NIVEL: ${currentLvl}<br>SCORE: ${score}`;
        if (window.submitHighScore) await window.submitHighScore(name, score, currentLvl, selectedAvatarIdx);
        const lb = await window.getLeaderboard();
        document.getElementById('leaderboard-list').innerHTML = lb.map((s, i) => `
            <div class="flex justify-between items-center bg-white/5 p-3 rounded-xl border border-white/5">
                <span class="text-xs">#${i+1} <b>${s.name}</b></span>
                <span class="text-amber-500 font-bold text-xs">${s.score} PTS</span>
            </div>`).join('');
    }

    window.onload = () => {
        Object.keys(ASSETS).forEach(k => {
            if (Array.isArray(ASSETS[k])) images[k] = ASSETS[k].map(u => { let i = new Image(); i.src = u; return i; });
            else { images[k] = new Image(); images[k].src = ASSETS[k]; }
        });
        canvas.width = window.innerWidth; canvas.height = window.innerHeight;
    };

    const bAct = document.getElementById('action-btn');
    const startFire = (e) => { isFiring = true; e.preventDefault(); };
    const endFire = () => isFiring = false;
    bAct.addEventListener('touchstart', startFire); bAct.addEventListener('touchend', endFire);
    bAct.addEventListener('mousedown', startFire); bAct.addEventListener('mouseup', endFire);

    canvas.addEventListener('touchstart', (e) => { touchStart = { x: e.touches[0].clientX, y: e.touches[0].clientY }; });
    canvas.addEventListener('touchmove', (e) => {
        if (!touchStart) return;
        const dx = e.touches[0].clientX - touchStart.x, dy = e.touches[0].clientY - touchStart.y;
        const d = Math.hypot(dx, dy); if (d > 10) touchMove = { x: dx/d, y: dy/d };
    });
    canvas.addEventListener('touchend', () => { touchStart = null; touchMove = { x: 0, y: 0 }; });
    window.onkeydown = (e) => keys[e.key.toLowerCase()] = true; window.onkeyup = (e) => keys[e.key.toLowerCase()] = false;
</script>
</body>
</html>

